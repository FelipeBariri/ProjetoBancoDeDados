@model ProjetoBancoDeDados.Models.Eventos

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>ProjetoEventos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeEventos" class="control-label"></label>
                <input asp-for="NomeEventos" class="form-control" />
                <span asp-validation-for="NomeEventos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEvento" class="control-label"></label>
                <input asp-for="DataEvento" class="form-control" />
                <span asp-validation-for="DataEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoId" class="control-label"></label>
                <input asp-for="DescricaoId" class="form-control" />
                <span asp-validation-for="DescricaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
